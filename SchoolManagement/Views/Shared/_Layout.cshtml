<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - SchoolManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <!-- ✅ Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">School System</a>

            <div class="d-flex align-items-center ms-auto">
                <img id="principalImage" src="#" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover; margin-right: 10px;" />
                <span id="principalName" class="fw-bold"></span>
            </div>
        </div>
    </nav>

    <!-- ✅ Page Content -->
    <main role="main" class="container">
        @RenderBody()
    </main>

    <!-- ✅ Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- ✅ Dynamic Principal Info -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const name = sessionStorage.getItem("principalName");
            const photo = sessionStorage.getItem("principalPhoto");

            if (name && photo) {
                document.getElementById("principalName").innerText = name;
                document.getElementById("principalImage").src = '/' + photo;
            } else {
                document.getElementById("principalName").innerText = "Guest";
                document.getElementById("principalImage").src = '/images/default-user.png';
            }
        });
    </script>

    <!-- ✅ Allow page-level scripts -->
    @RenderSection("Scripts", required: false)
</body>
</html>
